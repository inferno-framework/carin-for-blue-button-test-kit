require_relative '../../../read_test'
require 'json'
require_relative '../../../ext/fhir_models'

module InfernoTemplate
  module <%= module_name %>
    class <%= class_name %> < Inferno::Test
      include InfernoTemplate::ReadTest

      title 'Server returns correct <%= resource_type %> resource from <%= resource_type %> read interaction'
      description 'A server <%= conformance_expectation %> support the <%= resource_type %> read interaction.'

      id :<%= test_id %>

      input :<%= profile_identifier %>_ids,
        title: "<%= profile_identifier %> IDs",
        type: 'text',
        description: "<%= profile_identifier %> Resource ID"
    
    
      #makes_request :<%= profile_identifier %>_request

      def resource_type
        '<%= resource_type %>'
      end

      def scratch_resources
        scratch[:<%= profile_identifier %>_resources] ||= {}
      end

      def <%= profile_identifier %>_resource
        #fhir_read(:<%= profile_identifier %>, <%= profile_identifier%>_ids)
        file = File.open('lib/inferno_template/ext/examples/<%= profile_identifier %>_ex_1.json', 'r')
        resource = FHIR::Json.from_json(file.read)
        resource
      end

      run do
        perform_read_test([<%= profile_identifier %>_resource])
      end
    end
  end
end
